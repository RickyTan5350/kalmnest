            "program": "lib/main.dart",
            "cwd": "flutter_codelab",
            "args": [
                "--dart-define=PHYSICAL_DEVICE=false",
                "--dart-define=USE_HERD=true"
            ]
        },
        {
            "name": "Flutter: Physical Device (Artisan)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "cwd": "flutter_codelab",
            "args": [
                "--dart-define=PHYSICAL_DEVICE=true",
                "--dart-define=USE_HERD=false",
                "--dart-define=LOCAL_IP=192.168.0.161"
            ]
        },
        {
            "name": "Flutter: Expose (Public URL)",
